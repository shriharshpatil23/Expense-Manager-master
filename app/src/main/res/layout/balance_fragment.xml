<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/balancefragment"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#92C4E825"
        android:orientation="vertical"
        android:textAlignment="gravity"
        android:textDirection="firstStrong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/education_card_view"
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <EditText
                android:id="@+id/Education_title_name"
                android:layout_width="250dp"
                android:layout_height="89dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Education" />

            <TextView
                android:id="@+id/education_balance_view"
                android:layout_width="87dp"
                android:layout_height="71dp"
                android:layout_gravity="right|center"
                android:text="TextView" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Food_card_view"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <EditText
                android:id="@+id/Food_title_name"
                android:layout_width="247dp"
                android:layout_height="82dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Food" />

            <TextView
                android:id="@+id/food_balance_view"
                android:layout_width="84dp"
                android:layout_height="73dp"
                android:layout_gravity="center|right"
                android:text="TextView" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/travel_card_view"
            android:layout_width="match_parent"
            android:layout_height="131dp">

            <EditText
                android:id="@+id/Travel_title_name"
                android:layout_width="249dp"
                android:layout_height="91dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Travel" />

            <TextView
                android:id="@+id/travel_balance_view"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:layout_gravity="center|right"
                android:text="TextView" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/health_card_view"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <EditText
                android:id="@+id/health_title_name"
                android:layout_width="246dp"
                android:layout_height="93dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Health" />

            <TextView
                android:id="@+id/health_balance_view"
                android:layout_width="78dp"
                android:layout_height="70dp"
                android:layout_gravity="center|right"
                android:text="TextView" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/other_card_view"
            android:layout_width="match_parent"
            android:layout_height="124dp">

            <EditText
                android:id="@+id/other_title_name"
                android:layout_width="250dp"
                android:layout_height="94dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Others" />

            <TextView
                android:id="@+id/other_balance_view"
                android:layout_width="79dp"
                android:layout_height="66dp"
                android:layout_gravity="right|center"
                android:text="TextView" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>