<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BalanceCategoryFragment">

    <LinearLayout
        android:id="@+id/balancefragment"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#F3EDED"
        android:orientation="vertical"
        android:textAlignment="gravity"
        android:textDirection="firstStrong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/education_card_view"
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <TextView
                android:id="@+id/education_balance_view"
                android:layout_width="87dp"
                android:layout_height="71dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Education_title_name"
                android:layout_width="249dp"
                android:layout_height="92dp"
                android:layout_gravity="center|left"
                android:text="Education"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Food_card_view"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <TextView
                android:id="@+id/food_balance_view"
                android:layout_width="84dp"
                android:layout_height="73dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Food_title_name"
                android:layout_width="252dp"
                android:layout_height="96dp"
                android:layout_gravity="center|left"
                android:text="Food"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/travel_card_view"
            android:layout_width="match_parent"
            android:layout_height="131dp">

            <TextView
                android:id="@+id/travel_balance_view"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Travel_title_name"
                android:layout_width="250dp"
                android:layout_height="87dp"
                android:layout_gravity="left|center"
                android:text="Travel"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/health_card_view"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:id="@+id/health_balance_view"
                android:layout_width="78dp"
                android:layout_height="70dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/health_title_name"
                android:layout_width="247dp"
                android:layout_height="94dp"
                android:layout_gravity="center|left"
                android:text="Health"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/other_card_view"
            android:layout_width="match_parent"
            android:layout_height="124dp">

            <TextView
                android:id="@+id/other_balance_view"
                android:layout_width="79dp"
                android:layout_height="66dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/other_title_name"
                android:layout_width="249dp"
                android:layout_height="97dp"
                android:layout_gravity="center|left"
                android:text="Other"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>